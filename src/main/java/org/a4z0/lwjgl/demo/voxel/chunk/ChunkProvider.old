package org.a4z0.lwjgl.demo.voxel.chunk;

import org.a4z0.lwjgl.demo.voxel.position.ChunkPosition;
import org.a4z0.lwjgl.demo.voxel.level.LevelAccess;

import java.util.Arrays;

/**
* Represents a Chunk Provider.
*/

public class ChunkProvider implements IChunkProvider {

    protected final LevelAccess WORLD;

    protected Chunk[] LOADED_CHUNKS = new Chunk[4];

    /**
    * Construct a {@link ChunkProvider}.
    */

    public ChunkProvider(LevelAccess WORLD) {
        this.WORLD = WORLD;
    }

    @Override
    public Chunk getChunkAt(int x, int z) {
        for(Chunk CHUNK : LOADED_CHUNKS)
            if(CHUNK != null && ChunkPosition.asBlock(CHUNK.getX(), CHUNK.getZ()) == ChunkPosition.asBlock(x, z))
                return CHUNK;

        synchronized (this) {
            for(int i = 0; i < LOADED_CHUNKS.length; i++)
                if(LOADED_CHUNKS[i] == null)
                    return (LOADED_CHUNKS[i] = new InternalChunk(this.WORLD, x, z, null));

            LOADED_CHUNKS = Arrays.copyOf(LOADED_CHUNKS, LOADED_CHUNKS.length * 2);

            return (LOADED_CHUNKS[LOADED_CHUNKS.length / 2] = new InternalChunk(this.WORLD, x, z, null));
        }
    }

    public Chunk[] getChunks() {
        return this.LOADED_CHUNKS;
    }
}